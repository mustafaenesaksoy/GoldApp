<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <EditText
        android:id="@+id/firmaName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:hint="firma ismi:"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/AldimCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginBottom="20dp"
        android:text="Aldim"
        app:layout_constraintBottom_toTopOf="@+id/tarih"
        app:layout_constraintStart_toStartOf="parent" />

    <CheckBox
        android:id="@+id/VerdimCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="Verdim"
        app:layout_constraintBottom_toTopOf="@+id/tarih"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/AldimCheckBox" />

    <EditText
        android:id="@+id/tarih"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="120dp"
        android:ems="10"
        android:hint="tarih:"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/iscilik"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/miktar"
        android:layout_width="169dp"
        android:layout_height="45dp"
        android:layout_marginBottom="30dp"
        android:ems="10"
        android:hint="miktar: ornek(100)"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/iscilik"
        app:layout_constraintEnd_toStartOf="@+id/milyem"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/milyem"
        android:layout_width="169dp"
        android:layout_height="45dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="30dp"
        android:ems="10"
        android:hint="milyem:"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/iscilik"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/iscilik"
        android:layout_width="169dp"
        android:layout_height="45dp"
        android:layout_marginBottom="30dp"
        android:ems="10"
        android:hint="iscilik :"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/sonucHesapla"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/sonucHesapla"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:text="Sonucu hesapla"
        app:layout_constraintBottom_toTopOf="@+id/sonucText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/sonucText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:text="sonuc: "
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/kaydet"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <Button
        android:id="@+id/kaydet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="kaydet"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="5dp"
        android:text="Sonucu hesaplamadan kaydetmeyiniz."
        app:layout_constraintBottom_toTopOf="@+id/kaydet"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sonucText" />
</androidx.constraintlayout.widget.ConstraintLayout>